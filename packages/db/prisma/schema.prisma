generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["nativeDistinct", "fullTextSearchPostgres"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Trial {
    id         String    @id @default(uuid())
    createdAt  DateTime  @default(now())
    updatedAt  DateTime  @updatedAt
    finishedAt DateTime?

    duration        Int?
    automationLevel AutomationLevel @default(LOA1)
    currentRound    Int?

    correctAnswers   Int?
    incorrectAnswers Int?

    acceptedTrue  Int?
    acceptedFalse Int?

    rejectedTrue  Int?
    rejectedFalse Int?
}

model Image {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    url   String? @unique
    label Label?
}

enum AutomationLevel {
    LOA1
    LOA2
    LOA3
    LOA4_5
    LOA6
}

enum Label {
    ANGRY
    DISGUST
    FEAR
    HAPPY
    NEUTRAL
    SAD
    SURPRISE
}

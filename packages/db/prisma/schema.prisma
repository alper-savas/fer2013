generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearchPostgres", "nativeDistinct"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Trial {
    id               String          @id @default(uuid())
    createdAt        DateTime        @default(now())
    updatedAt        DateTime        @updatedAt
    acceptedFalse    Int             @default(0)
    acceptedTrue     Int             @default(0)
    automationLevel  AutomationLevel @default(LOA1)
    correctAnswers   Int             @default(0)
    currentRound     Int             @default(1)
    falsePredictions Int             @default(0)
    duration         Int?
    finishedAt       DateTime?
    incorrectAnswers Int             @default(0)
    rejectedFalse    Int             @default(0)
    rejectedTrue     Int             @default(0)
    resQue           ResQue?
}

model Image {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    url       String?  @unique
    label     Label?
}

model ResQue {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    items     Json     @default("[]")
    trialId   String   @unique
    trial     Trial    @relation(fields: [trialId], references: [id])
}

enum AutomationLevel {
    LOA1
    LOA2
    LOA3
    LOA4_5
    LOA6
}

enum Label {
    ANGRY
    DISGUST
    FEAR
    HAPPY
    NEUTRAL
    SAD
    SURPRISE
}
